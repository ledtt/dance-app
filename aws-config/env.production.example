# Production Environment Variables for AWS Deployment
# Copy this file to .env and update with your actual values

# Database Configuration
DB_USER=dance_user
DB_PASSWORD=your-super-secure-database-password-here
DATABASE_URL=postgresql://dance_user:your-super-secure-database-password-here@postgres:5432/dance_app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-at-least-32-characters-long-and-very-secure
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Security Configuration
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
TRUSTED_HOSTS=["yourdomain.com", "www.yourdomain.com"]

# Rate Limiting
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_REGISTER=3/minute

# Service URLs (for inter-service communication)
SCHEDULE_SERVICE_URL=http://schedule-service:8000

# Logging Configuration
LOG_LEVEL=INFO
STRUCTLOG_LEVEL=INFO

# AWS Specific Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# SSL Configuration (for Nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
TIMEOUT=30

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3 