[MASTER]
# Use multiple processes to speed up Pylint
jobs=0

[MESSAGES CONTROL]
# Disable some warnings that are not easily fixable
disable=
    C0301,  # Line too long - many lines exceed 100 chars
    C0303,  # Trailing whitespace - many files have this
    C0304,  # Final newline missing - some files missing
    C0305,  # Trailing newlines - some files have extra
    C0114,  # Missing module docstring - many modules missing
    C0115,  # Missing class docstring - many classes missing
    C0116,  # Missing function docstring - many functions missing
    C0411,  # Wrong import order - many files have this
    C0413,  # Import should be placed at top - sometimes needed for conditional imports
    C0415,  # Import outside toplevel - sometimes needed for conditional imports
    C0121,  # Comparison with singleton - sometimes clearer with == True
    E0401,  # Unable to import - relative import issues in services
    E0602,  # Undefined variable - some variables defined conditionally
    E0611,  # No name in module - some imports are conditional
    E1101,  # No member - some SQLAlchemy field issues
    E1102,  # Not callable - some SQLAlchemy func issues
    R0801,  # Duplicate code - some code is intentionally similar
    R0903,  # Too few public methods - some classes are data models
    R0911,  # Too many return statements - some functions have multiple exit points
    R0912,  # Too many branches - some functions have complex logic
    R0913,  # Too many arguments - some functions need many parameters
    R0914,  # Too many local variables - some functions are complex
    R0915,  # Too many statements - some functions are long
    R0917,  # Too many positional arguments - same as R0913
    R1704,  # Redefining argument with local name - sometimes necessary
    R1705,  # Unnecessary else after return - some cases are clearer with else
    W0107,  # Unnecessary pass statement - needed in exception classes
    W0311,  # Bad indentation - will fix manually
    W0611,  # Unused import - some imports are for type hints
    W0613,  # Unused argument - some arguments are required by interface
    W0621,  # Redefining name from outer scope - common in tests
    W0707,  # Raise missing from - some exceptions don't need chaining

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

[BASIC]
# Regular expression which should only match function or class names
good-names=i,j,k,ex,Run,_,id,db

[DESIGN]
# Maximum number of arguments for function / method
max-args=15
# Maximum number of locals for function / method
max-locals=25
# Maximum number of return / yield for function / method
max-returns=10
# Maximum number of statements in function / method
max-statements=100
# Maximum number of branches for function / method
max-branches=35

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=4
# Ignore imports when computing similarities
ignore-imports=yes
